<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fameg.petrolbrain_android.PlaceCommentsActivity">

    <ListView
        android:id="@+id/comentarios"
        android:layout_width="366dp"
        android:layout_height="315dp"
        tools:listitem="@layout/comment_item"
        tools:layout_editor_absoluteY="10dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/conteudoComentario"
        android:layout_width="368dp"
        android:layout_height="99dp"
        android:ems="10"
        android:hint="Digite seu comentÃ¡rio aqui"
        android:inputType="textMultiLine"
        tools:layout_editor_absoluteY="333dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/comentarios"
        android:layout_alignStart="@+id/comentarios" />


    <Button
        android:id="@+id/comentar"
        android:layout_width="166dp"
        android:layout_height="55dp"
        android:text="Comentar"
        tools:layout_editor_absoluteY="440dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/conteudoComentario"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />


</RelativeLayout>
